<!DOCTYPE html>
<html lang="en">
	<head>
		<% include ../partials/header %>
	</head>

	<body class="container-fluid">

	<header class="row">
		<% include ../partials/nav %>
	</header>

  		<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-default" id="signup-panel">
  					<div class="panel-heading">
  						<div class="panel-title">User Profile</div>
  					</div>

						<div class="panel-body">
						<form method="POST" action="/users/edit/<%= userInfo.id %>?_method=put">
						<fieldset>
							<div class="form-group"> <!-- First Name -->
								<input class="form-control" type="text" name="first_name" value="<%= userInfo.first_name %>" placeholder="First Name" required="required" autofocus="autofocus">
							</div>
							<div class="form-group"> <!-- Last Name -->
								<input class="form-control" type="text" name="last_name" value="<%= userInfo.last_name %>" placeholder="Last Name" required="required" autofocus="autofocus">
							</div>
						  <div class="form-group">
						  	<input class="form-control" type="text" name="email" value="<%= userInfo.email %>" placeholder="Email">
						  </div>
							<button type="submit" class="btn btn-outlined edit-btn">Save</button>
				  </fieldset>
				</form>
			</div>
		</div>
	</div>

<footer class="row">
		<% include ../partials/footer %>
</footer>

</body>
</html>
